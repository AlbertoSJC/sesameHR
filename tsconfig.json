{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@domain/*": ["src/domain/*"],
      "@tests/*": ["tests/*"],
      "@typesOrigin/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.astro",
    "tests/**/*.ts" // Ensure tests directory is included
  ],
  "exclude": ["node_modules"]
}
