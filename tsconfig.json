{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@domain/*": ["src/domain/*"],
      "@tests/*": ["tests/*"],
      "@models/*": ["src/types/*"]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
